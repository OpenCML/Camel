{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RUN (build)",
            "cwd": "${workspaceFolder}",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Release/camel.exe",
            "symbolSearchPath": "${workspaceFolder}/build/Debug",
            "args": ["${file}"],
            "console": "externalTerminal",
            "logging": {
                "moduleLoad": false,
                "trace": false
            }
        },
        {
            "name": "RUN (debug)",
            "cwd": "${workspaceFolder}",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/camel.exe",
            "symbolSearchPath": "${workspaceFolder}/build/Debug",
            "args": ["-v", "--log-level debug", "--profile", "${file}"],
            "console": "externalTerminal",
            "logging": {
                "moduleLoad": true,
                "trace": true
            }
