{
    "tasks": [
        {
            "label": "Run Camel (Release)",
            "type": "shell",
            "command": "${workspaceFolder}/build/Release/camel.exe",
            "args": ["${file}"],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build (debug)",
            "type": "shell",
            "command": "npm",
            "args": ["run", "debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
